
<h2>Contact Info</h2>

<div id="contactform">
<h3>Contact</h3>
<p>
    <strong>First Name: </strong>
    <%= @contact.first %>
    
    <strong>Last Name: </strong>
    <%= @contact.last %>
    
</p>

<p>
    
    <strong>Company: </strong>
    <%= @contact.company %>
    
    
</p>

<p>
    <strong>Address: </strong>
    <%= @contact.address %>
    
</p>

<p>
    <strong>Email: </strong>
    <%= @contact.email %>
</p>

<p>
    <strong>Home Phone: </strong>
    <%= @contact.home %>
    
    <strong>Cell Phone: </strong>
    <%= @contact.cell %>
    
    <strong>Work Phone: </strong>
    <%= @contact.work %>
   
    
</p>
</div>
<div id="eventform">
<h3> Events </h3>

<% @contact.events.each do |event| %>

<p>
    <strong>Type of Event</strong>
    <%= event.name %>
</p>

<p>
    <strong>Location</strong>
    <%= event.location %>
</p>


<p>
    <strong>Date</strong>
    <%= event.date %>
</p>

<p>
    <strong>Time</strong>
    <%= event.time %>
</p>

<p>
 <%= link_to 'Destory Event', [event.contact,event],
                method: :delete,
                data: {confirm:'Are you sure?'} %>
</p>
<% end%>

<h3>Add an Event</h3>

<%= form_for([@contact, @contact.events.build]) do |f| %>

<p>
    <% f.label :name %> Type of Event <br>
    <%= f.text_field :name %>
    
</p>


<p>
    <% f.label :location %> Location <br>
    <%= f.text_field :location %>
    
</p>
<p>
    <%= f.label :date %><br>
    <%= f.text_field :date %>
</p>
<p>
    <%= f.label :time %><br>
    <%= f.text_field:time %>
</p>
<p>
    <%= f.submit %>
</p>

</div>


<%end%>

 <button type = "button" id ="delete"><%= link_to 'Destroy',
                                contact_path(@contact),
                                method: :delete,
                                data: { confirm: 'Are you sure?' } %></button>

 <%= link_to 'Back', contacts_path %>
 
